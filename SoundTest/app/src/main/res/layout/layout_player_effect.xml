<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".SoundActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv_start_play"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/icon_start_3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.466"
            app:layout_constraintStart_toEndOf="@id/id_iv_recode"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="VectorDrawableCompat"/>


        <TextView
            android:id="@+id/id_tv_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:text="当前状态"/>

    </LinearLayout>

    <SeekBar
        android:layout_marginTop="20dp"
        android:id="@+id/id_sb"
        android:layout_width="match_parent"
        android:max="300"
        android:layout_height="20dp"/>

    <View
        android:layout_width="match_parent"
        android:background="#eee"
        android:layout_margin="20dp"
        android:layout_height="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv_start_play2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/icon_start_3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.466"
            app:layout_constraintStart_toEndOf="@id/id_iv_recode"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="VectorDrawableCompat"/>

        <TextView
            android:id="@+id/id_tv_state2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:text="当前状态"/>

    </LinearLayout>

    <SeekBar
        android:layout_marginTop="20dp"
        android:id="@+id/id_sb2"
        android:layout_width="match_parent"
        android:max="300"
        android:layout_height="20dp"/>

</LinearLayout>