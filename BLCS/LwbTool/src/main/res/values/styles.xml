<resources>
    <style name="match_wrap" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="wrap_wrap" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="wrap_match" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="match_match" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!--标准-->
    <style name="text_stander" parent="wrap_wrap">
        <item name="android:layout_marginLeft">@dimen/space_line</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/standard_title</item>
    </style>


    <declare-styleable name="luckpan">
        <attr name="pannum"  format="integer"/>
        <attr name="names" format="reference"/>
        <attr name="icons"  format="reference"/>
    </declare-styleable>

    <style name="empty_img">
        <item name="android:layout_width">@dimen/page_drag_min_width</item>
        <item name="android:layout_height">@dimen/page_drag_min_width</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
    <declare-styleable name="RxShapeLoadingView">
        <attr name="loadingText" format="string"/>
        <attr name="loadingTextAppearance" format="reference"/>
    </declare-styleable>

    <declare-styleable name="RxScaleImageView">
        <attr name="src" format="reference"/>
        <attr name="assetName" format="string"/>
        <attr name="panEnabled" format="boolean"/>
        <attr name="zoomEnabled" format="boolean"/>
        <attr name="quickScaleEnabled" format="boolean"/>
        <attr name="tileBackgroundColor" format="color"/>
    </declare-styleable>
    <style name="tran_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <declare-styleable name="FlikerProgressBar">
        <attr name="textSize" format="dimension"/>
        <attr name="loadingColor" format="color"/>
        <attr name="stopColor" format="color"/>
        <attr name="finishColor" format="color"/>
        <attr name="radius1" format="dimension"/>
        <attr name="borderWidth" format="dimension"/>
    </declare-styleable>
    <declare-styleable name="IconRoundCornerProgress">
        <attr name="rcIconSrc" format="integer"/>
        <attr name="rcIconSize" format="dimension"/>
        <attr name="rcIconWidth" format="dimension"/>
        <attr name="rcIconHeight" format="dimension"/>
        <attr name="rcIconPadding" format="dimension"/>
        <attr name="rcIconPaddingLeft" format="dimension"/>
        <attr name="rcIconPaddingRight" format="dimension"/>
        <attr name="rcIconPaddingTop" format="dimension"/>
        <attr name="rcIconPaddingBottom" format="dimension"/>
        <attr name="rcIconBackgroundColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="TextRoundCornerProgress">
        <attr name="rcTextProgressColor" format="color"/>
        <attr name="rcTextProgressSize" format="dimension"/>
        <attr name="rcTextProgressMargin" format="dimension"/>
        <attr name="rcTextProgress" format="string"/>
    </declare-styleable>
    <declare-styleable name="RoundCornerProgress">
        <attr name="rcReverse" format="boolean"/>
        <attr name="rcProgress" format="float"/>
        <attr name="rcMax" format="float"/>
        <attr name="rcSecondaryProgress" format="float"/>
        <attr name="rcBackgroundPadding" format="dimension"/>
        <attr name="rcRadius" format="dimension"/>
        <attr name="rcProgressColor" format="color"/>
        <attr name="rcSecondaryProgressColor" format="color"/>
        <attr name="rcBackgroundColor" format="color"/>
    </declare-styleable>
    <declare-styleable name="RxRoundProgress">
        <attr name="roundColor" format="color"/>
        <attr name="roundProgressColor" format="color"/>
        <attr name="roundWidth" format="dimension"/>
        <attr name="textColor1" format="color"/>
        <attr name="textSize1" format="dimension"/>
        <attr name="max" format="integer"/>
        <attr name="textIsDisplayable" format="boolean"/>
        <attr name="style">
            <enum name="STROKE" value="0"/>
            <enum name="FILL" value="1"/>
        </attr>
    </declare-styleable>


    <!--仿微信字体大小调整 FontSizeView-->
    <declare-styleable name="FontSizeView">
        <attr name="lineWidth" format="dimension|reference" />
        <attr name="lineColor" format="color|reference" />
        <attr name="totalCount" format="integer" />
        <attr name="circleColor" format="color|reference" />
        <attr name="circleRadius" format="dimension|reference" />

        <attr name="textFontColor" format="color|reference" />
        <attr name="smallSize" format="integer" />
        <attr name="standerSize" format="integer" />
        <attr name="bigSize" format="integer" />
        <attr name="defaultPosition" format="integer" />
    </declare-styleable>


    <!--简单的标签控件LabelView-->
    <declare-styleable name="LabelTextView">
        <attr name="textColor" format="color"/>
        <attr name="text" format="string"/>
        <attr name="backgroundColor" format="color"/>
        <attr name="textSize3" format="dimension"/>
        <attr name="numColor" format="color"/>

        <attr name="num" format="string"/>

        <attr name="numSize" format="dimension"/>

        <attr name="labelTopPadding" format="dimension"/>
        <attr name="labelCenterPadding" format="dimension"/>
        <attr name="labelBottomPadding" format="dimension"/>
        <attr name="numStyle">
            <enum name="normal" value="0"/>
            <enum name="italic" value="1"/>
            <enum name="bold" value="2"/>
        </attr>

        <attr name="textStyle">
            <enum name="normal" value="0"/>
            <enum name="italic" value="1"/>
            <enum name="bold" value="2"/>
        </attr>

        <attr name="direction">
            <enum name="leftTop" value="-45"/>
            <enum name="rightTop" value="45"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="ColorPickerPreference">
        <attr name="alphaSlider" format="boolean"/>
        <attr name="lightnessSlider" format="boolean"/>
        <attr name="density" format="integer"/>
        <attr name="initialColor" format="integer"/>
        <attr name="wheelType" format="enum">
            <enum name="FLOWER" value="0"/>
            <enum name="CIRCLE" value="1"/>
        </attr>
        <attr name="lightnessSliderView" format="reference"/>
        <attr name="alphaSliderView" format="reference"/>
        <attr name="pickerColorEditTextColor" format="integer"/>
        <attr name="pickerTitle" format="reference|string"/>
        <attr name="pickerButtonOk" format="reference|string"/>
        <attr name="pickerButtonCancel" format="reference|string"/>
    </declare-styleable>

    <declare-styleable name="RxCobwebView">
        <attr name="spiderColor" format="color"/>
        <attr name="spiderRadiusColor" format="color"/>
        <attr name="spiderLevelColor" format="color"/>
        <attr name="spiderLevelStroke" format="boolean"/>
        <attr name="spiderRotate" format="boolean"/>
        <attr name="spiderLevelStrokeWidth" format="float"/>
        <attr name="spiderMaxLevel" format="integer"/>
        <attr name="spiderNameSize" format="dimension"/>
    </declare-styleable>

    <style name="Animation_Bottom_Dialog">
        <item name="android:windowEnterAnimation">@anim/bottom_dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/bottom_dialog_exit</item>
    </style>
    <declare-styleable name="AttachButton">
        <!--是否需要自动吸边-->
        <attr name="customIsAttach" format="boolean" />
        <!--是否可拖曳-->
        <attr name="customIsDrag" format="boolean" />
    </declare-styleable>
    <style name="bottom_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/Animation_Bottom_Dialog</item>
    </style>

    <declare-styleable name="ScratchCard">
        <attr name="size" format="float"/>
        <attr name="preBackground" format="reference"/>
    </declare-styleable>

    <declare-styleable name="LoupeView">
        <attr name="radius" format="integer|reference"/>
        <attr name="scale" format="integer|reference"/>
    </declare-styleable>

    <!--Toolbar 标题字体大小颜色-->
    <style name="Toolbar_Title" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/blue</item>
    </style>
    <!--Toolbar 标题字体大小颜色-->
    <style name="Toolbar_SubTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/brown</item>
    </style>

    <!--溢出菜单颜色、背景、显示位置-->
    <style name="Toolbar_PopupMenu" parent="ThemeOverlay.AppCompat">
        <item name="android:colorBackground">@color/blue</item>
        <item name="android:textColor">@color/brown</item>
        <item name="overlapAnchor">false</item>
    </style>

    <!--SelectedRangeView -->
    <declare-styleable name="view_selected_range">
        <attr name="circleR" format="integer|reference"/>
        <attr name="AcircleValue" format="integer|reference"/>
        <attr name="BcircleValue" format="integer|reference"/>
        <attr name="valueRange" format="integer|reference"/>
        <attr name="progressBarHeight" format="integer|reference"/>
        <attr name="progressColor" format="color|reference"/>
        <attr name="selectedColor" format="color|reference"/>
        <attr name="circleCorlor" format="color|reference"/>
        <attr name="circleShadowCorlor" format="color|reference"/>
        <attr name="shadowWidth" format="float|reference"/>
        <attr name="starValue" format="integer|reference"/>
    </declare-styleable>

</resources>
