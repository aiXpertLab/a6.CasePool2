<resources>

    <!-- Base application theme. -->
    <style name="CustomeTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--状态栏底色-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--导航栏底色-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--导航栏上的标题颜色-->
        <item name="android:textColorPrimary">@color/black</item>
        <!--Activity窗口的颜色-->

        <!--按钮选中或者点击获得焦点后的颜色-->
        <item name="colorAccent">@color/green</item>
        <!--和 colorAccent相反，正常状态下按钮的颜色-->
        <!--<item name="colorControlNormal">#ffffff</item>-->
        <!--Button按钮正常状态颜色-->
        <item name="colorButtonNormal">@color/accent_material_light</item>
        <!--EditText 输入框中字体的颜色-->
        <!--<item name="editTextColor">@android:color/white</item>-->
        <!--设置窗体切换动画-->
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>

    </style>
    <!--Activity进入和退出动画-->
    <!-- animation 样式 -->
    <style name="activityAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/right_push_in</item>
        <item name="android:activityOpenExitAnimation">@anim/left_push_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/left_push_in</item>
        <item name="android:activityCloseExitAnimation">@anim/right_push_out</item>
    </style>


    <!-- Application theme. -->
    <style name="AppThemeBg" parent="CustomeTheme">
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="android:windowBackground">@mipmap/ic_app512</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="CustomeTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>


    <style name="standerd_text" parent="wrap_wrap">
        <item name="android:layout_marginLeft">@dimen/space_line</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/standard_title</item>
    </style>
    <style name="EditText_text" parent="wrap_wrap">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>


    <style name="TextView_wrap" parent="wrap_wrap">
        <item name="android:textColor">@color/green</item>
        <item name="android:padding">@dimen/space_line</item>
    </style>

    <style name="Button_wrap" parent="match_wrap">
        <item name="android:textAllCaps">false</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="Button_alpha" parent="Button_wrap">
        <item name="android:alpha">0.4</item>
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_stander</item>
        <item name="android:layout_marginTop">@dimen/space_line2</item>
    </style>

    <style name="Button_standard" parent="wrap_wrap">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_radious_green</item>
        <item name="android:padding">@dimen/space_line2</item>
        <item name="android:textSize">@dimen/Importan_work</item>
    </style>

    <style name="Button_ww" parent="wrap_wrap">
        <item name="android:background">@drawable/btn_oval</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:foreground">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="Lin_vertical" parent="match_wrap" >
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Lin_horizontal" parent="match_wrap" >
        <item name="android:orientation">horizontal</item>
    </style>


    <style name="text_sql" parent="wrap_wrap">
        <item name="android:layout_marginLeft">@dimen/space_line</item>
        <item name="android:textSize">@dimen/standard_title</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
